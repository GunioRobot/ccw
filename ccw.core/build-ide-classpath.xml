	<!-- Cette tache n'est pas executee en compilation headless, juste en compilation
         quotidienne via l'IDE ...
    -->
	<target name="init-pde-classpath" if="is-pdebuild">
		<path id="project.classpath">
			<path refid="@dot.classpath" />
			<pathelement location="${target.folder}" />
		</path>
	</target>
	<target name="init-ide-classpath" unless="is-pdebuild">
		<path id="project.classpath">
			<path refid="build.ide.classpath" />
			<pathelement location="${basedir}/bin" />
		</path>
	</target>
	<target name="init-classpath" depends="init-pde-classpath,init-ide-classpath" />
